<div class="p-3 mt-4 mb-4 border rounded shadow" id="<%= dom_id post %>">
    <%= turbo_frame_tag "post-content" do %>
        <%= render "/posts/navbar", post: post %>

        <div class="pb-2 pt-2"><%= post.body %></div>
        <% unless post.photo_attachment.nil? %>
            <div class="shadow-sm d-flex justify-content-center"><%= image_tag(post.photo, id: "post-photo") %></div>
        <% end %>
    <% end %>

    <%= turbo_frame_tag "likes" do %>
        <%= render "/posts/likes", post: post %>
        <%= render "/posts/menu", post: post %>
    <% end %>

    <%= turbo_frame_tag "comments" do %>
        <%= render "/posts/comments", post: post %>
    <% end %>
</div>
