<div class="border" id="<%= dom_id comment %>">
    <%= link_to comment.author.email, comment.author  %>
    <p> <%= comment.body %> </p>
    <p class="text-muted"> Created at: <%= comment.created_at %> </p>
    <% if(comment.created_at != comment.updated_at) %>
        <p class="text-muted"> Edited at: <%= comment.created_at %> </p>
    <% end %>

    <% if(current_user == comment.post.author || current_user == comment.author ) %>
        <%= form_with(model: [comment.post, comment], method: :delete, data: { confirm: 'Are you sure?' }) do |form| %>
            <%= form.submit 'Delete comment' %>
        <% end %>
    <% end %>
</div>