<%= form_for(resource, as: resource_name, url: password_path(resource_name), data: { turbo:false }, html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.hidden_field :reset_password_token %>

  <div class="field m-1">
    <%= f.label :password, "New password", class: "form-label" %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
    <% if @minimum_password_length %>
      <div class="form-text"><%= @minimum_password_length %> characters minimum</div>
    <% end %>
  </div>

  <div class="field m-1">
    <%= f.label :password_confirmation, "Confirm new password", class: "form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions m-1">
    <%= f.submit "Change my password", class: "btn btn-secondary w-100 mb-2 mt-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
