<%= form_for(resource, as: resource_name, url: password_path(resource_name), data: { turbo:false }, html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field m-1">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="actions m-1">
    <%= f.submit "Send me reset password instructions", class: "btn btn-secondary w-100 mt-2 mb-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
