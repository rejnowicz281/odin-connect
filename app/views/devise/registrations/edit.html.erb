<%= link_to "  Back", :back, class: "btn btn-primary bi-arrow-left" %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}, html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field m-1">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field m-1">
    <%= f.label :password, "New Password (optional)", class: "form-label" %>
    <%= f.password_field :password, placeholder: (@minimum_password_length.to_s + " characters minimum"), autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field m-1">
    <%= f.label :password_confirmation, "New Password Confirmation", class: "form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field m-1">
    <%= f.label :current_password, class: "form-label" %>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <div class="actions m-1">
    <%= f.submit "Update", class: "btn btn-secondary w-100 mb-2 mt-2" %>
  </div>
<% end %>

<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-warning w-100 mb-2 mt-2"%>