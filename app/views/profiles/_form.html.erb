<%= form_with(model: profile) do |form| %>
    <div class="m-1 d-flex flex-column align-items-center">
        <%= form.label :photo, class: "form-label" %>
        <%= form.file_field :photo, class: "form-control w-50" %>
    </div>

    <div class="m-1 d-flex flex-column align-items-center">
        <%= form.label :phone_number, class: "form-label" %>
        <%= form.number_field :phone_number, class: "form-control w-50" %>
    </div>

    <div class="m-1 d-flex flex-column align-items-center">
        <%= form.label :gender, class: "form-label" %>
        <%= form.select(:gender, ["Male", "Female", "Other"], {}, {class: "form-select w-50"}) %>
    </div>

    <div class="m-1 d-flex flex-column align-items-center">
        <%= form.label :birth_date, class: "form-label" %>
        <%= form.date_field :birth_date, class: "form-control w-50" %>
    </div>

    <div class="m-1 d-flex flex-column align-items-center">
        <%= form.label :location, class: "form-label" %>
        <%= form.text_field :location, class: "form-control w-50" %>
    </div>

    <div class="d-flex justify-content-center"><%= form.submit class: "btn btn-secondary w-50 mt-2" %></div>
<% end %>