<h5 class="text-warning">Friends: </h5>
<% if current_user.friends.empty? %>
    <p class="text-muted">no friends. lol</p>
<% else %>
    <ul class="list-group">
        <% current_user.friendships.each do |friendship| %>
            <li class="list-group-item miniature-event m-1">
                <p class="text-muted">Friend</p>
                <h6 class="text-truncate"> <%= friendship.friend.email %></h6>
                <%= button_to "Unfriend", friendship_path(friendship.id), method: :delete %>
            </li>
        <% end %>
    </ul>
<% end %>